<?xml version="1.0" encoding="utf-8"?>
<coms.pacs.pacs.Views.NoScrollNestScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size15"
    android:paddingRight="@dimen/size15">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/linecolor"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/name"
            android:paddingTop="@dimen/size5"
            android:paddingBottom="@dimen/size5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/xx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="影像描述"
            android:paddingBottom="@dimen/size6"
            app:counterEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/picdes"
                android:textSize="@dimen/contentsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size80" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="诊断结果"
            app:counterEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/picresult"
                android:textSize="@dimen/contentsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size80" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size24"
            android:layout_marginEnd="@dimen/size8"
            android:layout_marginStart="@dimen/size8"
            android:layout_marginTop="@dimen/size8"
            android:background="@drawable/stoken_background_selector"
            android:text="提交" />
    </LinearLayout>
</coms.pacs.pacs.Views.NoScrollNestScrollView>
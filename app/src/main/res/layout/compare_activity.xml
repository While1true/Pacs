<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <coms.pacs.pacs.Utils.Dcm.PathImageView
        android:id="@+id/pathView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/water"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="@dimen/size2"
        android:background="#666666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <coms.pacs.pacs.Utils.Dcm.PathImageView
        android:id="@+id/pathView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/forest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pathView1" />

    <coms.pacs.pacs.Views.TextProgressBar
        android:id="@+id/textProgressBar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/size55"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@+id/pathView2"
        app:text="正在下载中" />

    <coms.pacs.pacs.Views.TextProgressBar
        android:id="@+id/textProgressBar1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/size50"
        app:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/pathView2"
        app:layout_constraintEnd_toEndOf="@+id/pathView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pathView1"
        app:text="正在下载中" />
</android.support.constraint.ConstraintLayout>